function submitAssessment() {
    const answers = {
        q1: parseInt(document.getElementById("q1").value),
        q2: parseInt(document.getElementById("q2").value),
        // ใส่คำตอบอื่นๆ ที่ได้จากแบบประเมิน
    };

    // บันทึกข้อมูลลงใน LocalStorage
    saveAnswersToLocalStorage(answers);

    // ฟังก์ชันอื่นๆ ที่ใช้หลังส่งคำตอบ
    window.location.href = "summary.html"; // เปลี่ยนเส้นทางไปยังหน้าสรุปผล
}
